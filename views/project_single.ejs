<h1><%= project.title %></h1>

<div class="card">
  <% if (project.category_name) { %>
    <p class="text-muted">
      Category:
      <a href="/categories/<%= project.category_id %>">
        <%= project.category_name %>
      </a>
    </p>
  <% } %>

    <p class="text-muted">
      Created by:
      <strong>
        <%= project.username %>
      </strong>
    </p>

  <p class="<%= project.description ? '' : 'text-muted' %>">
    <%= project.description || "No description provided." %>
  </p>
</div>

<div class="actions mt-2">
  <a href="/projects" class="btn btn-secondary">Back</a>
  <% if (user && project.created_by == user.id) { %>
  <a href="/projects/update/<%= project.id %>" class="btn">Edit</a>
  <a href="/projects/delete/<%= project.id %>" class="btn btn-danger">Delete</a>
  <% } %>
</div>
