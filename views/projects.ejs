<div class="page-header">
  <h2>All Projects</h2>
  <a href="/projects/create" class="btn">+ Add Project</a>
</div>

<div class="grid">
  <% if (projects.length === 0) { %>
    <p class="text-muted">No projects found.</p>
  <% } else { %>
    <% projects.forEach(project => { %>
      <div class="card">
        <h3><%= project.title %></h3>
        <% if (project.category_name) { %>
          <p class="text-muted"><%= project.category_name %></p>
        <% } %>
        <a href="/projects/project/<%= project.id %>" class="link">
          View â†’
        </a>
      </div>
    <% }) %>
  <% } %>
</div>
