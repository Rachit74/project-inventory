<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Projects</title>
</head>
<body>
  <%- include("partials/navbar") %>

  <div class="container">
    <div class="list-item" style="margin-bottom: 1.5rem;">
      <h2>All Projects</h2>
      <a href="/projects/create" class="btn">+ Add Project</a>
    </div>

    <div class="list">
      <% if (projects.length === 0) { %>
        <p class="text-muted">No projects found.</p>
      <% } else { %>
        <% projects.forEach(project => { %>
          <div class="card list-item">
            <div>
              <h3><%= project.title %></h3>
              <% if (project.category_name) { %>
                <p class="text-muted"><%= project.category_name %></p>
              <% } %>
            </div>
            <a href="/projects/project/<%= project.id %>">View</a>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</body>
</html>
