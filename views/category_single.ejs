<h1><%= category.name %></h1>

<div class="card">
  <p class="<%= category.description ? '' : 'text-muted' %>">
    <%= category.description || "No description provided." %>
  </p>
</div>

<h2 class="mt-2">Projects</h2>

<div class="grid">
  <% if (!projects || projects.length === 0) { %>
    <p class="text-muted">No projects in this category.</p>
  <% } else { %>
    <% projects.forEach(project => { %>
      <div class="card">
        <h3><%= project.title %></h3>
        <a href="/projects/<%= project.id %>" class="link">View â†’</a>
      </div>
    <% }) %>
  <% } %>
</div>

<div class="actions mt-2">
  <a href="/categories" class="btn btn-secondary">Back</a>
  <a href="/categories/update/<%= category.id %>" class="btn">Edit</a>
  <a href="/categories/delete/<%= category.id %>" class="btn btn-danger">Delete</a>
  <a href="/projects/create" class="btn">+ Project</a>
</div>
